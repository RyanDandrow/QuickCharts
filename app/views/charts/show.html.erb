<p id="notice"><%= notice %></p>

  <div class="title">
    <h2><%= @chart.title %></h2>
  </div>

  <div class="container">
    <div class="title-box">
      <strong>Note:</strong>
    </div>

    <div class="title-box">
      <strong>Chord:</strong>
    </div>

    <div class="title-box">
      <strong>Left hand:</strong>
    </div>

    <div class="title-box">
      <strong>Right hand:</strong>
    </div>
  </div>

  <div class="container">
    <div class="box">
      <p><%= @chart.note %></p>
    </div>

    <div class="box">
      <p><%= @chart.chord %></p>
    </div>

    <div class="box magicMusicBlocks">
      <p><%= @chart.left_hand %></p>
    </div>

    <div class="box magicMusicBlocks">
      <p><%= @chart.right_hand %></p>
    </div>
  </div>

<% if @chart.second_note.blank? %>
  <!-- show nothing -->
<% else %>
    <div class="container">
      <div class="box">
        <p><%= @chart.second_note %></p>
      </div>

      <div class="box">
        <p><%= @chart.second_chord %></p>
      </div>

      <div class="box">
        <p><%= @chart.second_left_hand %></p>
      </div>

      <div class="box">
        <p><%= @chart.second_right_hand %></p>
      </div>
    </div>
  <% end %>

<%= link_to 'Edit', edit_chart_path(@chart) %> |
<%= link_to 'Back', charts_path %>
