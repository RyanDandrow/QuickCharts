          <% else %>
            <p><%= @chart.second_row_1_line_break_right_hand %></p>
        <% end %>
      </div>
    </div>

  <% if @chart.second_note.blank? %>
    <!-- show nothing -->
  <% else %>
      <div class="container-flex">
        <div class="box">
          <p><%= @chart.second_note %></p>
