<div class="container">
  <p id="notice"><%= notice %></p>

    <div class="title">
      <h2><%= @chart.title %></h2>
    </div>

    <br>

    <div class="container-flex">
      <div class="title-box">
        <strong>Note:</strong>
      </div>

      <div class="title-box">
        <strong>Chord:</strong>
      </div>

      <div class="title-box">
        <strong>Left hand:</strong>
      </div>

      <div class="title-box">
        <strong>Right hand:</strong>
      </div>
    </div>

    <div class="container-flex">
      <div class="box">
        <p><%= @chart.note_image %></p>
        <% if @chart.first_row_1_line_break_note.blank? %>
          <% else %>
            <p><%= @chart.first_row_1_line_break_note %></p>
        <% end %>

        <% if @chart.second_row_1_line_break_note.blank? %>
          <% else %>
            <p><%= @chart.second_row_1_line_break_note %></p>
        <% end %>
      </div>

      <div class="box chord">
        <p><%= @chart.chord %></p>
        <% if @chart.first_row_1_line_break_chord.blank? %>
          <% else %>
            <p><%= @chart.first_row_1_line_break_chord %></p>
        <% end %>

        <% if @chart.second_row_1_line_break_chord.blank? %>
          <% else %>
            <p><%= @chart.second_row_1_line_break_chord %></p>
        <% end %>
      </div>

      <div class="box magicMusicBlocks">
        <p><%= @chart.left_hand %></p>
        <% if @chart.first_row_1_line_break_left_hand.blank? %>
          <% else %>
